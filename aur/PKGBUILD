# Maintainer: Simon Harrer

pkgname=mobsh-bin
pkgver=${{ github.event.release.tag_name }}
pkgrel=1
pkgdesc="Fast git handover with mob"
arch=('x86_64')
url="https://github.com/${{github.repository_owner}}/mob"
license=('MIT')
depends=("git")
optdepends=('espeak-ng-espeak: Multi-lingual software speech synthesizer'
            'mbrola-voices-us1: An American English female voice for the MBROLA synthesizer')
provides=('mobsh')
conflicts=('mobsh' 'mob')

source_x86_64=("$url/releases/download/v${{ github.event.release.tag_name }}/mob_v${{ github.event.release.tag_name }}_linux_amd64.tar.gz")
sha256sums_x86_64=("${{ steps.shasum.outputs.sha }}")

package() {
    install -D -m644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -D -m755 "mob" "$pkgdir/usr/bin/mob"
}